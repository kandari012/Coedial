<html>
  <head>
    <!-- to use noty  -->
    <link
      rel="stylesheet"
      href=" https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <!-- to use jquery in  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <title><%= title %></title>
    <link rel="stylesheet" href="<%=assetsPath("css/layout.css")%>" /> <link
    rel="stylesheet" href="<%=assetsPath("css/header.css")%>" /> <link
    rel="stylesheet" href="<%=assetsPath("css/footer.css")%>" /> <%- style%>
  </head>
  <body>
    <%- include("_header") ;%>

    <main><%- body %></main>
    <%- include("_footer") ;%> <%- script%>
    <!-- //used to show noty notifiaction on the page -->
    <!-- use flash messages passed to res by middleware -->
    <script>
            <% if(flash.success && flash.success.length>0) {%>

              new Noty({
                theme:"relax",
                text:"<%=flash.success%>",
                type:"success",
                layout:"topRight",
                timeout:1500
              }).show();
            <%}%>

            <% if(flash.error && flash.error.length>0) {%>

      new Noty({
        theme:"relax",
        text:"<%=flash.error%>",
        type:"error",
        layout:"topRight",
        timeout:1500
      }).show();
      <%}%>
    </script>
  </body>
</html>
